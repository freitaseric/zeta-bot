generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @unique
  account Bank    @relation(fields: [bankId], references: [id])
  bankId  String
  balance Decimal @default(0.0)

  @@map("users")
}

model Bank {
  id        String @id @unique @default(uuid())
  name      String @unique
  ownerId   String @unique
  customers User[]

  @@map("banks")
}
